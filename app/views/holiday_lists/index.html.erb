<p id="notice"><%= notice %></p>

<h1>Holiday Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holiday_lists.each do |holiday_list| %>
      <tr>
        <td><%= holiday_list.name %></td>
        <td><%= holiday_list.date %></td>
        <td><%= link_to 'Show', holiday_list %></td>
        <td><%= link_to 'Edit', edit_holiday_list_path(holiday_list) %></td>
        <td><%= link_to 'Destroy', holiday_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

